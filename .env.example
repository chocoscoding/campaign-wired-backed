# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=https://campaignwired.com,https://www.campaignwired.com

# Default SMTP Configuration (System-wide fallback)
SMTP_HOST=bulk.smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Organization

# Encryption Key for SMTP Passwords (REQUIRED - Generate a strong random key)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your-secure-encryption-key-here

# Supabase Configuration (Required for authentication and user SMTP config)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Vonage Configuration (for SMS/Voice)
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_APPLICATION_ID=your-vonage-app-id
VONAGE_PRIVATE_KEY=your-vonage-private-key
VONAGE_VIRTUAL_NUMBER=your-vonage-phone-number
VONAGE_WEBHOOK_SIGNER=your-webhook-signer

# Messages Configuration
MESSAGES_TO_NUMBER=+1234567890
SMS_SENDER_ID=YourBrand

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Organization
